{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],

    "lib": ["es2023", "dom"],

    "module": "esnext",
    "target": "es2022",

    "moduleResolution": "bundler",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "jsx": "react-native",

    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
